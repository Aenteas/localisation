from map import Map
from map import Robot
import numpy as np
from map import Map
import random

# creating walls
# every wall corresponds to a tuple, the first 2 elements are the starting, the last 2 elements are the ending points

num_features = 30
map_size = (500, 600)
#generate features
features = []
for i in range(num_features):
        pos_x = np.random.rand() * map_size[1]
        pos_y = np.random.rand() * map_size[0]
        features.append((pos_x, pos_y))

map = Map(features)
map.set_robot(Robot(pos=(150, 350)))
map.simulate()
